            <input type="text" name="link1" value="" placeholder="Geek For Geeks Link">
            <input type="text" name="link2" value="" placeholder="Java Point Link">
            <input type="text" name="link3" value="" placeholder="W3 Schools link">
            <div class="card-content">
              <input type="submit" value="ADD TOPIC">
            </div>
          </form>
        </ul>
      </div>
    </section>


