<body>
  <%- include('Navbar.ejs')%>

    </section>
    <section class="sectionCourse" aria-label="recent post">
      <div class="container">

        <div class="title-wrapper">
          <h2 class="h2 section-title">
            Publish <strong class="strong" style="display: inline;">Links for : <%= courseTitle %></strong>
          </h2>
        </div>
        <ul class="grid-list">
          <form action="/uploadTopic" method="POST">
            <input type="hidden" name="courseTitle" value="<%= courseTitle %>">
